<Page x:Class="InterfaceElemente.PageF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterfaceElemente"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageF">

    <StackPanel>
        <TextBox x:Name="tbCount" Width="50"/>
        <Button x:Name="btnLoadList" Content="Daten Laden" Width="100" Click="btnLoadList_Click"/>
        <ListView x:Name="lbContent" Height="400" Width="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zeitpunkt" Width="150" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Kommentar" Width="200" DisplayMemberBinding="{Binding Text}"/>
                    <GridViewColumn Header="Wert" Width="50" DisplayMemberBinding="{Binding Amount}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </StackPanel>
</Page>
